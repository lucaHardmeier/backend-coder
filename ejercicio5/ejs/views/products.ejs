<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Productos Ejs</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-gH2yIJqKdNHPEq0n4Mqa/HGKIhSkIHeL5AyhkYV8i59U5AR6csBvApHHNl/vI1Bx" crossorigin="anonymous">
</head>
<body>
    <header class="m-4 p-2 d-flex flex-md-row justify-content-center text-white bg-dark shadow-lg rounded">
        <h1>Listado de productos</h1>
    </header>
    <main class="px-5 pb-4 container-sm text-warning bg-dark shadow-lg rounded">
        <a href="/api" class="btn btn-outline-warning my-4">Ir al formulario</a>
        <% if (errorMsj) { %>
            <h3><%= errorMsj %></h3>
        <% } else { %>
            <ul class="d-flex flex-wrap justify-content-between">
                <% products.forEach(function(product) { %>
                    <li class="card bg-warning m-2" style="width: 14rem;">
                        <img src=<%= product.thumbnail %> class="card-img-top" alt="...">
                        <div class="card-body text-dark">
                            <h5 class="card-title"><%= product.id %> - <%= product.title %></h5>
                            <p class="card-text"> $<%= product.price %></p>
                        </div>
                    </li>
                    <% }) %>
            </ul>
        <% } %>
    </main>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/js/bootstrap.bundle.min.js" integrity="sha384-A3rJD856KowSb7dwlZdYEkO39Gagi7vIsF0jrRAoQmDKKtQBHUuLZ9AsSv4jD4Xa" crossorigin="anonymous"></script>
</body>
</html>