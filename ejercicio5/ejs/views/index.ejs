<body>
    <header class="m-4 p-2 d-flex flex-md-row justify-content-center text-white bg-dark shadow-lg rounded">
        <h1>Formulario de productos</h1>
    </header>
    <main class="px-5 pb-4 container-sm text-warning bg-dark shadow-lg rounded">
        <a href="/api/productos" class="btn btn-outline-warning my-4">Ver los productos</a>
        <form  action="/api/productos" method="post" >
            <label for="title" class="form-label"><strong>TÃ­tulo:</strong></label>
            <input type="text" name="title" class="form-control mb-3">
            <label for="price" class="form-label"><strong>Precio:</strong></label>
            <input type="text" name="price" class="form-control mb-3">
            <label for="thumbnail" class="form-label"><strong>URL:</strong></label>
            <input type="text" name="thumbnail" class="form-control mb-3">
            <button type="submit" class="btn btn-warning text-dark shadow mt-4"><strong>Enviar</strong></button>
        </form>
    </main>
        
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/js/bootstrap.bundle.min.js" integrity="sha384-A3rJD856KowSb7dwlZdYEkO39Gagi7vIsF0jrRAoQmDKKtQBHUuLZ9AsSv4jD4Xa" crossorigin="anonymous"></script>
