<header class="m-4 p-2 d-flex flex-md-col justify-content-center text-white bg-dark shadow-lg rounded">
    {{#if nameUser }}
    <form action="/api/logout" method="post">
        <h2>Bienvenido {{nameUser}}</h2>
        <button type="submit" class="btn btn-warning text-dark shadow"><strong>Salir</strong></button>
    </form>
    {{else}}
    <form action="/api/login" method="post">
        <label for="name" class="form-label"><strong>Nombre</strong></label>
        <input type="text" name="name" class="form-control mb-2" id="userFirstName">
        <button type="submit" class="btn btn-warning text-dark shadow"><strong>Enviar</strong></button>
    </form>
    {{/if}}
    <h1>Formulario de productos</h1>
</header>
<main class="px-5 pb-4 container-sm text-warning bg-dark shadow-lg rounded">
    <a href="/api/productos" class="btn btn-outline-warning my-4">Ver los productos</a>
    <form action="/api/productos" method="post">
        <label for="title" class="form-label"><strong>TÃ­tulo:</strong></label>
        <input type="text" name="title" class="form-control">
        <br>
        <label for="price" class="form-label"><strong>Precio:</strong></label>
        <input type="text" name="price" class="form-control">
        <br>
        <label for="thumbnail" class="form-label"><strong>URL:</strong></label>
        <input type="text" name="thumbnail" class="form-control">
        <br>
        <button type="submit" class="btn btn-warning text-dark shadow"><strong>Enviar</strong></button>
    </form>
</main>