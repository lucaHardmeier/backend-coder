<header class="m-4 p-2 d-flex flex-md-column justify-content-center text-white bg-dark shadow-lg rounded">
    {{#if username }}
    <form action="/api/logout" method="post">
        <h2>Bienvenido {{username}}</h2>
        <button type="submit" class="btn btn-warning text-dark shadow"><strong>Salir</strong></button>
    </form>
    {{else}}
    <h2>Usuario an√≥nimo</h2>
    {{/if}}
    <h1>Listado de productos</h1>
</header>
<main class="px-5 pb-4 container-sm text-warning bg-dark shadow-lg rounded">
    <a href="/api" class="btn btn-outline-warning my-4">Ir al chat</a>
    {{#if errorMsj }}
    <h3>{{errorMsj}}</h3>
    {{else}}
    <ul class="d-flex flex-wrap justify-content-between">
        {{#each products}}
        <li class="card bg-warning m-2" style="width: 14rem;">
            <img src={{this.thumbnail}} class="card-img-top" alt="...">
            <div class="card-body text-dark">
                <h5 class="card-title">
                    {{this.id}} - {{this.title}}
                </h5>
                <p class="card-text">
                    ${{this.price}}
                </p>
            </div>
        </li>
        {{/each}}
    </ul>
    {{/if}}
</main>